
public class Solution {

	public static void rowWiseSum(int[][] mat) {
		//Your code goes here
		if(mat.length ==0){
			return ;
		}
		// number of row
		for( int i = 0; i<mat.length; i++){
			int sum = 0;
			 
			 // Number of columns 
			 for ( int j = 0; j< mat[0].length; j++){
                   sum = sum + mat[i][j];
			 }
			 System.out.print(sum+ " ");
		}
	}

}
